{
  "name": "storage-ui",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run copy:storage",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "tsc -p tsconfig.client.json",
    "copy:storage": "rimraf public/docs public/images public/assets && cpx \"storage/**/*\" public",
    "dev": "npm run build && node dist/server.js"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "express": "^5.2.1",
    "serverless-http": "^4.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "cpx": "^1.2.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  }
}